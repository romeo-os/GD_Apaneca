<!--Recibimos el modelo-->
@model List<GestionDocumentalAdmin.Models.TableViewModels.UsuariosTableViewModel>
@{
    ViewBag.Title = "AdminUsuario";
}

@section scripts
{
    <script src="~/Scripts/Js/usuarios.admin.view.js" type="text/javascript"></script>
}

@section titleView
{
    <h2>Usuarios</h2>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">

                <button class="btn btn-primary btn-md button-create" style="margin-bottom:10px;">
                    <i class="fas fa-plus"></i>
                    Nuevo usuario
                </button>

                <table id="table-content" class="display" cellspacing="0" width="100%" height="5%" data-page-length="5">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 5%;">#</th>
                            <th style="width: 30%;">Nombre</th>
                            <th style="width: 20%;">Usuario</th>
                            <th style="width: 40%;">Email</th>
                            <!--<th style="width: 10%;">Estado</th>-->
                            <th style="width: 5%">Opciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@*Sección para agregar el html de los botones, formulario u otros elementos que se necesiten
    fuera de la vista en primer plano, esto no es visible y se agrega fuera del body de la página*@
@section utilHtml
{
    <div id="action-buttons" style="display: none;">
        <div class="btn-group" data-row="{data}">
            <button class='btn btn-warning btn-xs button-edit' data-action="edit" data-placement="top"
                    title='Editar'>
                <i class='fas fa-edit'></i>
            </button>
            <button class='btn btn-danger btn-xs button-delete' data-action="delete" data-placement="top"
                    title='Eliminar'>
                <i class='fas fa-times'></i>
            </button>
        </div>
    </div>
}

