@{
    ViewBag.Title = "Permisos";
}

@section scripts
{
    <script src="~/Scripts/Administrador/permisos.js" type="text/javascript"></script>
}

@section titleView
{
    <h2>Asignar Permisos a: @ViewData["Rol"]</h2>
    <h6 id="idrol" style="display: none;"> @ViewData["idRol"] </h6>
}

<div class="row">
    <div class="col-md-12 ">
        <div class="panel panel-default">
            <div class="panel-body">

                <button class="btn btn-primary btn-md button-guardar" style="margin-bottom:10px;">
                    <i class="fas fa-save"></i>
                    Guardar
                </button>
                    <table id="table-content" class="display" cellspacing="0" width="100%" data-page-length="25">
                        <thead class="thead-dark">
                            <tr>
                                <th style="width: 5%;">#</th>
                                <th style="width: 25%;">Modulo</th>
                                <th style="width: 50%;">Permiso</th>
                                <th style="width: 20%">Bloquear Permiso</th>
                            </tr>
                        </thead>
                    </table>
            </div>
        </div>
    </div>
</div>

@*Sección para agregar el html de los botones, formulario u otros elementos que se necesiten
    fuera de la vista en primer plano, esto no es visible y se agrega fuera del body de la página*@
@section utilHtml
{
    <div id="action-buttons" style="display: none;">
        <div class="btn-group " data-row="{data}">
            <input type="checkbox" name="chk" id="chkPermiso"/>
        </div>
    </div>
}

<link href="~/Content/css/StylePermisos.css" rel="stylesheet" />