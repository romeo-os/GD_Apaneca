@model GestionDocumentalAdmin.Items.DatosUsuarioItem

<script src="~/Scripts/DatosUsuario/datosUsuario.js"></script>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "modal-form", role = "form" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h6 class="fa fa-users-cog"> Tus datos</h6>
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idUsuario)

    <div class="form-group">
        @Html.LabelFor(model => model.usuario, "Usuario", htmlAttributes: new { @class = "control-label col-md-8" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group row justify-content-start">
        @Html.LabelFor(model => model.clave, "Clave Actual", htmlAttributes: new { @class = "control-label col-md-8" })
        <div class="col-md-12">
            @Html.PasswordFor(model => model.clave, new { @class = "form-control password1" })
        </div>
        <div class="col-md-1 colIcon">
            <i class="fa fa-eye" id="mostrarC"></i>
        </div>
    </div>

    <div class="form-group row justify-content-start">
        @Html.LabelFor(model => model.nuevaClave, "Clave Nueva", htmlAttributes: new { @class = "control-label col-md-8" })
        <div class="col-md-12">
            @Html.PasswordFor(model => model.nuevaClave, new { @class = "form-control password2" })
        </div>
        <div class="col-md-1 colIcon">
            <i class="fa fa-eye" id="mostrarC1"></i>
        </div>
    </div>

    <div class="form-group row justify-content-start">
        @Html.LabelFor(model => model.confirClave, "Repetir Clave", htmlAttributes: new { @class = "control-label col-md-8" })
        <div class="col-md-12">
            @Html.PasswordFor(model => model.confirClave, new { @class = "form-control password3" })
        </div>
        <div class="col-md-1 colIcon">
            <i class="fa fa-eye" id="mostrarC2"></i>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Actualizar Datos" class="btn btn-primary" />
        </div>
    </div>
</div>
}

