@using GestionDocumentalAdmin.Commons;
@{
    ViewBag.Title = "ContenidoCarpetas";
}

@section scripts
{
    <script src="~/Scripts/Js/contenido.carpeta.view.js" type="text/javascript"></script>
}

@section titleView
{
    <h2>> @ViewData["NombreC"]</h2>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <input type="hidden" id="idCarpeta" value="@ViewData["Id_Carpeta"]" name="idCarpeta" />

                @if (FrontUser.TienePermiso(RolesPermisos.Agregar_documentos))
                {
                    <button class="btn btn-primary btn-md button-create" style="margin-bottom:10px;">
                        <i class="fa fa-plus"></i>
                        Agregar documento
                    </button>

                    @*<button class="btn btn-primary btn-md" style="margin-bottom:10px;">
                        <i class="fa fa-plus"></i>
                        Escanear
                    </button>*@
                }
                else
                {
                    <button class="btn btn-default btn-md" style="margin-bottom:10px;">
                        <i class="fa fa-plus"></i>
                        Agregar documento
                    </button>

                    @*<button class="btn btn-default btn-md" style="margin-bottom:10px;">
                        <i class="fa fa-plus"></i>
                        Escanear
                    </button>*@
                }


                <table id="table-content" class="display" cellspacing="0" width="100%">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 5%;">#</th>
                            <th style="width: 40%;">Documento</th>
                            <th style="width: 15%;">Tipo</th>
                            <th style="width: 20%;">Fecha de creación</th>
                            <th style="width: 25%;">Modificación</th>
                            <th style="width: 10%">Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section utilHtml
{
    <div id="action-buttons" style="display: none;">
        <div class="btn-group" data-row="{data}">
            @if (FrontUser.TienePermiso(RolesPermisos.Descargar_documentos))
            {
                <button class='btn btn-success btn-xs button-download' data-action="download" data-placement="top"
                        title='Descargar archivo'>
                    <i class='fas fa-download'></i>
                </button>
            }
            else
            {
                <button class='btn btn-default btn-xs' data-placement="top"
                        title='Descargar archivo'>
                    <i class='fas fa-download'></i>
                </button>

            }

            @if (FrontUser.TienePermiso(RolesPermisos.Editar_documentos))
            {
                <button class='btn btn-warning btn-xs button-edit' data-action="edit" data-placement="top"
                        title='Editar información'>
                    <i class='fas fa-edit'></i>
                </button>
            }
            else
            {
                <button class='btn btn-default btn-xs'data-placement="top"
                        title='Editar información'>
                    <i class='fas fa-edit'></i>
                </button>
            }

            @if (FrontUser.TienePermiso(RolesPermisos.Eliminar_documentos))
            {
                <button class='btn btn-danger btn-xs button-delete' data-action="delete" data-placement="top"
                        title='Eliminar'>
                    <i class='fas fa-times'></i>
                </button>
            }else{
                <button class='btn btn-default btn-xs' data-placement="top"
                        title='Eliminar'>
                    <i class='fas fa-times'></i>
                </button>
            }

        </div>
    </div>
}