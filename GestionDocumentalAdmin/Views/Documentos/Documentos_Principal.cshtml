@using GestionDocumentalAdmin.Commons;
@model List<GestionDocumentalAdmin.Models.TableViewModels.CarpetasTableViewModel>
@{
    ViewBag.Title = "Documentos";
}

@section scripts
{
    <script src="~/Scripts/DocumentosJs/documentos.js" type="text/javascript"></script>
}

@section titleView
{
    <h2>Carpetas</h2>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @if (FrontUser.TienePermiso(RolesPermisos.Agregar_documentos))
                {
                    <button class="btn btn-primary btn-md button-create" style="margin-bottom:10px;">
                        <i class="fa fa-plus"></i>
                        Nueva carpeta
                    </button>
                }
                else
                {
                    <button class="btn btn-default btn-md" style="margin-bottom:10px;">
                        <i class="fa fa-plus"></i>
                        Nueva carpeta
                    </button>
                }


                <table id="table-content" class="display" cellspacing="0" width="100%">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 5%;">#</th>
                            <th style="width: 30%;">Carpeta</th>
                            <th style="width: 40%;">Descripción</th>
                            <th style="width: 20%;">Fecha de creación</th>
                            <th style="width: 5%">Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@*Sección para agregar el html de los botones, formulario u otros elementos que se necesiten
    fuera de la vista en primer plano, esto no es visible y se agrega fuera del body de la página*@
@section utilHtml
{
    <div id="action-buttons" style="display: none;">
        <div class="btn-group" data-row="{data}">
            @if (FrontUser.TienePermiso(RolesPermisos.Editar_documentos))
            {
                <button class='btn btn-warning btn-xs button-edit' data-action="edit" data-placement="top"
                        title='Editar'>
                    <i class='fas fa-edit'></i>
                </button>
            }
            else
            {
                <button class='btn btn-default btn-xs' data-placement="top"
                        title='Editar'>
                    <i class='fas fa-edit'></i>
                </button>

            }

            @if (FrontUser.TienePermiso(RolesPermisos.Eliminar_documentos))
            {
                <button class='btn btn-danger btn-xs button-delete' data-action="delete" data-placement="top"
                        title='Eliminar'>
                    <i class='fas fa-times'></i>
                </button>
            }
            else
            {
                <button class='btn btn-default btn-xs' data-placement="top"
                        title='Eliminar'>
                    <i class='fas fa-times'></i>
                </button>
            }


        </div>
    </div>
}